print("2.")
pppp = input("2 задание:")
M = 80
m1 = 400
g = 10
def N2():
    for m2 in range(100, 300+1, 20):
        a = (((m2 - m1) / 1000) / ((m1 + m2 + M/2)/1000)) * g
        print("Значение ускорения при M = 80г, m₁ = 400г, m₂ = " + str(m2) + "г = " + str(a) + str("м/c²"))

N2()

print("3. ")
def N3():
    A = input("Введите число, большее 1: ")
    try:
        float(A)
    except:
        print("Ваши данные не соответсвуют условию, попробуйте еще раз")
        N3()
        return
    if float(A) > 1:
        A = float(A)
        su = 0
        k = 1
        while True:
            su += 1 / k
            k+=1
            if su > A:
                print("Сумма: " + str(su) + ", K = " + str(k))
                break
    else:
        print("Ваше число не соответствует условию, попробуйте еще раз")
        N3()
        return

N3()
