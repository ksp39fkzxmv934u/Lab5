#1
print("1.")
def N1():
    N = input("Введите целое число, большее 0: ")
    try:
        int(N)
    except:
        print("Ваши данные не соответсвуют условию, попробуйте еще раз")
        N1()
        return
    if int(N) > 0:
            N = int(N)
            f = 0
            for i in range(1, N + 1):
                f += 2 * i - 1
                print(f)
            print("Ваше число в квадрате = " + str(f))
    else:
        print("Ваше число не соответствует условию, попробуйте еще раз")
        N1()
        return

N1()

